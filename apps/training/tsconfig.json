{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		// "esModuleInterop": true,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true,
		"types": ["bun-types"],
	},
	"include": [
    "src/**/*.ts",
    "test/**/*.test.ts",
  ]
}
